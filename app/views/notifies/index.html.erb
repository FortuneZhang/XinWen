<h1>Listing notifies</h1>

<table>
  <tr>
    <th>Target</th>
    <th>Content</th>
    <th>Is read</th>
    <th>News</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notifies.each do |notify| %>
  <tr>
    <td><%= notify.target_id %></td>
    <td><%= notify.content %></td>
    <td><%= notify.is_read %></td>
    <td><%= notify.news %></td>
    <td><%= notify.user %></td>
    <td><%= link_to 'Show', notify %></td>
    <td><%= link_to 'Edit', edit_notify_path(notify) %></td>
    <td><%= link_to 'Destroy', notify, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


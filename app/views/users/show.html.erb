<p id="notice"><%= notice %></p>

<p>
  <b>账户名:</b>
  <%= @user.name %>
</p>

<% if @user.id == session[:user].id %>
    <p>
      <b>密码:</b>
      <%= @user.pwd %>
    </p>

<% end %>
<p>
  <b>角色:</b>
  <%= @user.rank %>
</p>

<p>
  <b>所属栏目组:</b>
  <%= @user.item_id %>
</p>


<% if session[:user].id == @user.id %>
